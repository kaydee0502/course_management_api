<%= render "home/nav_bar" %>
<p id="notice"><%= notice %></p>



<div class="back">

<h1 style="margin:10px;margin-top:20px;color:white;"><%= @course.name %></h1>
<h5 style = "margin:10px;margin-top:20px;color:white;">Total Seats : <%= @course.seats %></h5>

<h5 style = "margin:10px;margin-top:20px;color:white;">About Course : <%= @course.description %></h5>



<div style="display: flex;justify-content:center; padding-top:5%">
<div class="card text-center col-sm-8">
<h5 style = "margin:10px;margin-top:20px;">Total Students : <%= @course.enrolled %></h5>
<div class="row justify-content-center">
    <div class="col-auto">


<table class="table table-hover">
  <thead >
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email ID</th>
      <th>Joined</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @course.users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email.split("@")[0] %></td>
        <td><%= user.email %></td>
        
        <td><%= user.created_at %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Remove', courses_deenroll_path(:c => @course.id, :u => user.id),:confirm => "Are you sure want to de enroll?", method: :post %></td>
        <%end %>
       </tr>
      <% end %>
       

    

  </tbody>
</table>
</div>
</div>
</div>
</div>









<div style="display: flex;justify-content:center;margin : 20px;">
<% if current_user && current_user.admin %>

<%= link_to 'Edit', edit_course_path(@course),class: "btn btn-warning",style:"color : #000" %> 
<%end%>|
<%= link_to 'Back', courses_path,class: "btn btn-success",style:"color : #FFF" %>
</div>
</div>